pkgname=tree-sitter-mainline
pkgver=0.21.0.pre1
pkgrel=1
pkgdesc="An incremental parsing system for programming tools"
arch=('x86_64')
url="https://tree-sitter.github.io/tree-sitter/"
license=('MIT')
depends=('glibc')
makedepends=('git')
provides=("tree-sitter=$pkgver" 'libtree-sitter.so')
conflicts=('tree-sitter')
options=('staticlibs')
source=("git+https://github.com/tree-sitter/tree-sitter.git#commit=76baf8152adada3a630bba9691fadb413a8e3783")
sha256sums=('SKIP')

build() {
  cd "tree-sitter"

  make
}

package() {
  cd "tree-sitter"

  make DESTDIR="$pkgdir" PREFIX=/usr install

  install -Dm644 LICENSE -t "$pkgdir/usr/share/licenses/tree-sitter"
}
